{
  "manifest_version": 3,
  "name": "Gemini 프롬프트 개선기",
  "version": "1.0",
  "description": "Gemini에서 프롬프트를 자동으로 개선합니다",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://gemini.google.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["index.js"],
      "css": ["css/style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "view/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_ui": {
    "page": "view/options.html",
    "open_in_tab": true
  }
}